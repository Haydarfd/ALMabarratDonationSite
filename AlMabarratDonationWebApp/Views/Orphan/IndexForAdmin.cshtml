@model IEnumerable<AlMabarratDonationWebApp.Application.DTO.OrphanDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Orphan Management";
    var nationalities = Model.Select(o => o.Nationality).Where(n => !string.IsNullOrWhiteSpace(n)).Distinct().OrderBy(n => n).ToList();
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<section class="grid-section">
    <div class="content-container d-flex align-items-center">
        <h4 class="pt-1 mb-0">Total Orphans:</h4>
        <p id="topNb" class="mb-0 ms-3">
            <strong>@Model.Count()</strong>
        </p>
    </div>
</section>

<div class="mb-3 d-flex align-items-center">
    <label class="me-2 fw-bold">Filter by Nationality:</label>
    <select id="nationalityFilter" class="form-select w-auto">
        <option value="">All</option>
        @foreach (var nationality in nationalities)
        {
            <option value="@nationality">@nationality</option>
        }
    </select>
</div>

<div class="card custom-table-container">
    <div class="card-body">
        <div class="table-responsive">
            <table id="orphansTable" class="table text-center">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Lost Parents</th>
                        <th>Status</th>
                        <th>Date Joined</th>
                        <th>Father's Name</th>
                        <th>Mother's Name</th>
                        <th>Nationality</th>
                        <th>Health</th>
                        <th>Sponsorship Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orphan in Model)
                    {
                        <tr>
                            <td>@orphan.FullName</td>
                            <td>@orphan.DateOfBirth</td>
                            <td>@orphan.Gender</td>
                            <td>@orphan.Age</td>
                            <td>@orphan.LostParents</td>
                            <td>
                                <span class="badge @(orphan.Status == "Active" ? "bg-success" : "bg-warning")">
                                    @orphan.Status
                                </span>
                            </td>
                            <td>@orphan.DateJoined</td>
                            <td>@orphan.FatherName</td>
                            <td>@orphan.MotherName</td>
                            <td>@orphan.Nationality</td>
                            <td>@orphan.HealthCondition</td>
                            <td>@orphan.SponsorshipType</td>
                            <td >
                                <div class="d-inline-flex gap-2 align-items-center">
                                    <a asp-action="Edit" asp-route-id="@orphan.OrphanID" class="text-success" title="Edit">
                                        <i class="bx bx-edit"></i>
                                    </a>
                                    <form method="post" asp-controller="Orphan" asp-action="Delete" asp-route-id="@orphan.OrphanID"
                                          class="d-inline" onsubmit="return confirmDelete(this, event);">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link p-0" title="Delete">
                                            <i class="bx bx-trash text-danger"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<section class="grid-section">
    <div class="button-container">
        <a asp-controller="Orphan" asp-action="Create" class="btn btn-primary">
            <i class='bx bx-plus'></i> Add Orphan
        </a>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Destroy existing instance if it exists
            if ($.fn.DataTable.isDataTable('#orphansTable')) {
                $('#orphansTable').DataTable().destroy();
            }

            // Initialize with smooth loading
            var table = $('#orphansTable').DataTable({
                "initComplete": function () {
                    $(this).addClass('loaded');
                    $('.dataTables_wrapper').css('opacity', 1);
                },
                "columnDefs": [
                    { "orderable": false, "targets": [11] } // Make Actions column non-sortable
                ],
                "deferRender": true,
                "responsive": true,
                "processing": true,
                "lengthMenu": [5, 10, 25, 50, 100],
                "pageLength": 5,
                "language": {
                    "lengthMenu": "Display _MENU_ Orphans",
                    "zeroRecords": "No Orphans Found",
                    "info": "Page _PAGE_ of _PAGES_",
                    "infoEmpty": "No data available",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "search": "🔎 Search:",
                    "paginate": {
                        "previous": "Previous",
                        "next": "Next",
                        "first": "First",
                        "last": "Last"
                    },
                    "processing": '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>'
                },
                "dom": '<"d-flex justify-content-between align-items-center mb-3"<"left-section d-flex align-items-center"Bl><"right-section"f>>rt<"d-flex justify-content-between align-items-center mt-3"<"left-section"i><"right-section"p>>',
                "buttons": [
                    {
                        extend: 'copy',
                        text: '<i class="fas fa-copy"></i> Copy',
                        className: 'btn btn-sm btn-outline-secondary',
                        exportOptions: { columns: ':not(:last-child)' }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-sm btn-outline-success',
                        exportOptions: { columns: ':not(:last-child)' }
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-sm btn-outline-danger',
                        exportOptions: { columns: ':not(:last-child)' }
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Print',
                        className: 'btn btn-sm btn-outline-primary',
                        exportOptions: { columns: ':not(:last-child)' }
                    }
                ]
            });

            // Custom filter for nationality
            $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                var selectedNationality = $('#nationalityFilter').val();
                var nationality = data[9] || ''; // index 9 is Nationality
                return selectedNationality === '' || nationality === selectedNationality;
            });

            $('#nationalityFilter').on('change', function () {
                table.draw();
            });

            // Smooth search input
            $('.dataTables_filter input')
                .attr('placeholder', '')
                .addClass('form-control form-control-sm')
                .css('transition', 'all 0.3s ease');
        });

        function confirmDelete(form, event) {
            event.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "This orphan will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}