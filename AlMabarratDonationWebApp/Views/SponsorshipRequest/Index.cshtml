@model List<AlMabarratDonationWebApp.Application.DTO.SponsorshipRequestDto>

@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h2 class="text-2xl font-bold mb-5">Sponsorship Requests</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-gray-500">No sponsorship requests available.</p>
}
else
{
    <table id="sponsorshipRequestsTable" class="stripe hover w-full text-left border border-gray-200">
        <thead class="bg-primary text-white">
            <tr>
                <th class="p-3">Age Group</th>
                <th class="p-3">Gender</th>
                <th class="p-3">Amount</th>
                <th class="p-3">Payment Type</th>
                <th class="p-3">Sponsorship Type</th>
                <th class="p-3">Donor Name</th>
                <th class="p-3">Donor Email</th>
                <th class="p-3 text-center">Assign</th>
                <th class="p-3 text-center">Unassign</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="p-3">@request.AgeGroup</td>
                    <td class="p-3">@request.Gender</td>
                    <td class="p-3">@request.Amount</td>
                    <td class="p-3">@request.PaymentType</td>
                    <td class="p-3">@request.SponsorshipType</td>
                    <td class="p-3">@request.DonorName</td>
                    <td class="p-3">@request.DonorEmail</td>
                    <td class="p-3 text-center">
                        <a class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600"
                           href="@Url.Action("SelectOrphans", "SponsorshipRequest", new {
                            sponsorshipRequestId = request.SponsorshipId,
                           donorEmail = request.DonorEmail
                       })">
                            Assign
                        </a>
                    </td>

                    <td class="p-3 text-center">
                        <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600"
                                onclick="unassignSponsorship('@request.SponsorshipId')">
                            Unassign
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    function assignSponsorship(sponsorshipId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You are about to assign this sponsorship.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Assign!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/SponsorshipRequest/Assign',
                    type: 'POST',
                    data: { id: sponsorshipId },
                    success: function(response) {
                        Swal.fire(
                            'Assigned!',
                            'The sponsorship has been assigned successfully.',
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    },
                    error: function() {
                        Swal.fire(
                            'Error!',
                            'There was an error while assigning the sponsorship.',
                            'error'
                        );
                    }
                });
            }
        });
    }

    function unassignSponsorship(sponsorshipId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You are about to unassign this sponsorship.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Unassign!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/SponsorshipRequest/Unassign',
                    type: 'POST',
                    data: { id: sponsorshipId },
                    success: function(response) {
                        Swal.fire(
                            'Unassigned!',
                            'The sponsorship has been unassigned successfully.',
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    },
                    error: function() {
                        Swal.fire(
                            'Error!',
                            'There was an error while unassigning the sponsorship.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
