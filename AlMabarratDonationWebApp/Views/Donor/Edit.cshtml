@model AlMabarratDonationWebApp.Application.DTO.UpdateDonorDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/AddForm.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="orphan-form-container">
    <h2 class="orphan-form-title">Edit Donor</h2>

    <form asp-action="Edit" method="post" class="orphan-form">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <div class="form-group">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostalCode" class="form-label">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="form-label">Country</label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Donor</button>
            <a asp-controller="Donor" asp-action="Index" class="btn btn-secondary">Back to Donors</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize Select2 if needed for other select fields
            $('.select2-dropdown').select2({
                minimumResultsForSearch: 5,
                width: '100%',
                placeholder: "Search for a nationality"
            });
        });
    </script>
}
