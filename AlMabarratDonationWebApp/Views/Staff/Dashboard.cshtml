<!-- Assign Orphan Modal -->
<div id="assignModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-lg w-full max-w-md">
        <div class="flex items-center justify-between p-4 border-b">
            <h3 class="text-lg font-semibold text-gray-800">Assign Orphan</h3>
            <button id="closeAssignModal" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="assignForm" class="p-6">
            <input type="hidden" id="orphanId" name="orphanId">

            <div class="mb-4">
                <label for="donorSearch" class="block text-sm font-medium text-gray-700 mb-1">Search Donor</label>
                <select id="donorSearch" class="donor-search w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option></option>
                    <option value="1">mohammed.ahmed@email.com</option>
                    <option value="2">fatima.khalid@email.com</option>
                    <option value="3">ali.hassan@email.com</option>
                    <option value="4">khaled.omar@email.com</option>
                    <option value="5">layla.mohammed@email.com</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Donor Preferences</label>
                <div class="bg-gray-50 p-3 rounded-md">
                    <p class="text-sm"><span class="font-medium">Gender:</span> Female</p>
                    <p class="text-sm"><span class="font-medium">Age Range:</span> 5-10 years</p>
                    <p class="text-sm"><span class="font-medium">Special Requests:</span> None</p>
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-3">
                <button type="button" id="cancelAssignModal" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    Confirm Assignment
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Assign Modal handling
        const assignModal = document.getElementById('assignModal');
        const closeAssignBtn = document.getElementById('closeAssignModal');
        const cancelAssignBtn = document.getElementById('cancelAssignModal');

        // Open modal when assign button is clicked
        document.querySelectorAll('.assign-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const orphanId = btn.getAttribute('data-orphan-id');
                document.getElementById('orphanId').value = orphanId;
                assignModal.classList.remove('hidden');
            });
        });

        closeAssignBtn.addEventListener('click', () => {
            assignModal.classList.add('hidden');
        });

        cancelAssignBtn.addEventListener('click', () => {
            assignModal.classList.add('hidden');
        });

        // Close modal when clicking outside
        window.addEventListener('click', (event) => {
            if (event.target === assignModal) {
                assignModal.classList.add('hidden');
            }
        });

        // Form submission
        document.getElementById('assignForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const orphanId = document.getElementById('orphanId').value;
            const donorId = document.getElementById('donorSearch').value;

            // In a real app, this would be an AJAX call
            Swal.fire({
                title: 'Assignment Successful',
                text: `Orphan ${orphanId} has been assigned to donor ${donorId}`,
                icon: 'success',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            }).then(() => {
                assignModal.classList.add('hidden');
                // You would typically refresh the data here
            });
        });

        // Initialize Select2 for donor search
        $(document).ready(function() {
            $('.donor-search').select2({
                placeholder: "Search donor by email...",
                allowClear: true
            });
        });
    </script>
}