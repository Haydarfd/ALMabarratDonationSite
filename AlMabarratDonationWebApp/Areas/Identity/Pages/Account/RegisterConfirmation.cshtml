@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 20px;
        }
        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        .header h1 {
            color: #008000;
            margin-bottom: 20px;
        }
        .message {
            margin: 20px 0;
            line-height: 1.6;
        }
        .confirm-link {
            color: #008000;
            font-weight: bold;
            text-decoration: none;
        }
        .confirm-link:hover {
            text-decoration: underline;
        }
        .footer {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            border-top: 4px solid #008000;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
            display: none;
        }
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="message">
            @if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    <a id="confirm-link" class="confirm-link" href="@Model.EmailConfirmationUrl" target="_blank">Click here to confirm your account</a>
                </p>
                <div class="spinner" id="spinner"></div>
                <p>You will be redirected to login shortly...</p>
            }
            else
            {
                <p>
                    Please check your email to confirm your account.
                </p>
            }
        </div>

        <div class="footer">
            <p>If you did not register for an account, please ignore this message.</p>
        </div>
    </div>

    <script>
        document.getElementById("confirm-link")?.addEventListener("click", function (e) {
            e.preventDefault();  

            // Show loading spinner
            document.getElementById("spinner").style.display = "block";

            // Open confirmation URL in hidden iframe
            const iframe = document.createElement("iframe");
            iframe.style.display = "none";
            iframe.src = this.href;
            document.body.appendChild(iframe);

            // Redirect to login after a brief delay
            setTimeout(function () {
                window.location.href = "https://localhost:7248/Identity/Account/Login";
            }, 1000); // Reduced from 3s to 1s for better UX
        });
    </script>
</body>
</html>